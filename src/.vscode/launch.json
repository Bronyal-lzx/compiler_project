{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug compiler",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/compiler",
            "args": ["tests/test03.tea"],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "", // 如果需要构建程序，你可以指定一个预启动任务
            "miDebuggerPath": "/usr/bin/gdb" // 确保路径指向正确的 gdb 安装路径
        }
    ]
}
